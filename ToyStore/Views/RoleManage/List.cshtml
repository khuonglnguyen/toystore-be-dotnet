@using ToyStore.Models;
@model PagedList.IPagedList<Role>
@using PagedList.Mvc;

@{
    ViewBag.Title = "List";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
}
@{
    Emloyee emloyee = Session["Emloyee"] as Emloyee;
}
<link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
<script src="//code.jquery.com/jquery-1.10.2.js"></script>
<script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
<script src="~/Scripts/bootbox.js"></script>

<script>
    $(document).ready(function () {
        $('#btnAddNew').off('click').on('click', function () {
            $('#modalAdd').modal('show');
        });
        $('.btnEdit').off('click').on('click', function () {
            var id = $(this).val();
            $('#modalUpdate').modal('show');
            $.ajax({
                url: '/RoleManage/Edit',
                data: {
                    id: id
                },
                type: 'GET',
                dataType: 'json',
                success: function (response) {
                    if (response.status == true) {
                        $('#IDUpdate').val(response.ID);
                        $('#NameUpdate').val(response.Name);
                    }
                    else {
                        bootbox.alert(response.message);
                    }
                },
                error: function (err) {
                    console.log(err);
                }
            });
        });
        $(document).on('click', '.btnActive', function () {
            var id = $(this).attr('id');
            var row = $(this).attr('value');
            $(this).attr("class", "btn btn-link btnBlock");
            $(this).attr("data-ajax-update", "#DivActive" + row);
            $(this).attr("href", "/RoleManage/Block/" + id + "?row=" + row + "&amp;value=" + id + "\"");
            $(this).html("Khóa");
        });
        $(document).on('click', '.btnBlock', function () {
            var id = $(this).attr('id');
            var row = $(this).attr('value');
            $(this).attr("class", "btn btn-link btnActive");
            $(this).attr("data-ajax-update", "#DivActive" + row);
            $(this).attr("href", "/RoleManage/Active/" + id + "?row=" + row + "&amp;value=" + id + "\"");
            $(this).html("Mở");
        });
    });
</script>
<ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="@Url.Action("Index")">Trang chủ</a> <i class="fa fa-angle-right"></i></li>
    <li class="breadcrumb-item"><a href="@Url.Action("List")">Quản Lý Quyền</a> <i class="fa fa-angle-right"></i></li>
</ol>

<div class="agile-grids">
    <div class="agile-tables">
        <div class="w3l-table-info">
            <ul class="bt-list">
                <li><a href="#" class="hvr-icon-float-away col-24" style="background-color:green" id="btnAddNew">Thêm mới</a></li>
            </ul>
            <hr />
            <div class="w3-search-box">
                <form action="~/ProductManage/List" method="post">
                    <input type="text" placeholder="Tìm kiếm..." name="keyword" id="keyword">
                    <input type="submit" value="">
                </form>
            </div><!--//end-search-box-->
            <p>@ViewBag.message</p>
            <div class="clearfix"> </div>
            <hr />
            <h2>Danh sách quyền</h2>
            <table id="table">
                <thead>
                    <tr>
                        <th>
                            Tên Quyền
                        </th>
                        <th>
                            Trạng thái
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int counter1 = 0;
                    }
                    @foreach (var item in Model)
                    {
                        @Html.Hidden(item.ID.ToString())
                        <tr>
                            <td style="color:brown">
                                <b>@Html.DisplayFor(modelItem => item.Name)</b>
                            </td>
                            <td>
                                <div id="DivActive@(counter1)">
                                    @if (item.IsActive == true)
                                    {
                                        <span class="label label-success">Kích hoạt</span>
                                    }
                                    else
                                    {
                                        <span class="label label-danger">Khóa</span>
                                    }
                                </div>
                            </td>
                            <td>
                                <button class="btn btn-primary btnEdit" value="@item.ID">Sửa</button>
                                @if (item.IsActive == true)
                                {
                                    @Ajax.ActionLink("Khóa", "Block", "RoleManage", new { ID = item.ID, row = counter1 }, new AjaxOptions { HttpMethod = "GET", UpdateTargetId = "DivActive" + counter1, InsertionMode = InsertionMode.Replace }, new { @class = "btn btn-link btnBlock", data = counter1, id = item.ID, value = counter1 })
                                }
                                else
                                {
                                    @Ajax.ActionLink("Mở", "Active", "RoleManage", new { ID = item.ID, row = counter1 }, new AjaxOptions { HttpMethod = "GET", UpdateTargetId = "DivActive" + counter1, InsertionMode = InsertionMode.Replace }, new { @class = "btn btn-link btnActive", data = counter1, id = item.ID, value = counter1 })
                                }
                            </td>
                        </tr>
                        @(counter1++)
                    }
                    @(counter1 = 0)
                </tbody>
            </table>
            <br />
            <div id='Paging' style="text-align: center">
                @Html.PagedListPager(Model, page => Url.Action("List", new { page }))
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modalAdd" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Thêm mới</h4>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("AddRole", "RoleManage", FormMethod.Post))
                {
                    <div class="form-group">
                        <label for="Name">Tên quyền:</label>
                        <input type="text" class="form-control" name="Name" id="Name">
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary" id="btnSave">Lưu</button>
                        <button type="button" class="btn btn-default" data-dismiss="modal">Hủy</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modalUpdate" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Chỉnh sửa</h4>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("Edit", "RoleManage", FormMethod.Post))
                {
                    <input type="text" name="ID" id="IDUpdate" hidden="hidden" />
                    <div class="form-group">
                        <label for="Name">Tên quyền:</label>
                        <input type="text" class="form-control" name="Name" id="NameUpdate">
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary" id="btnSave">Lưu</button>
                        <button type="button" class="btn btn-default" data-dismiss="modal">Hủy</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>