@using ToyStore.Models
<!--header-->
<div class="header">
    <div class="top-header navbar navbar-default">
        <!--header-one-->
        <div class="container">
            <div class="nav navbar-nav wow fadeInLeft animated" data-wow-delay=".5s">
                @if (Session["User"] != null && Session["User"] != "")
                {
                    <p>
                        <a href="@Url.Action("SignOut","Home")">Đăng xuất </a>
                    </p>
                }
                else
                {
                    <p>Chào mừng đến với ToyStore <a href="/dang-ky">Đăng ký </a> hoặc <a href="/dang-nhap">Đăng nhập </a></p>
                }
            </div>
            <div class="nav navbar-nav navbar-right social-icons wow fadeInRight animated" data-wow-delay=".5s">
                <ul>
                    <li><a href="#"> </a></li>
                    <li><a href="#" class="pin"> </a></li>
                    <li><a href="#" class="in"> </a></li>
                    <li><a href="#" class="be"> </a></li>
                    <li><a href="#" class="you"> </a></li>
                    <li><a href="#" class="vimeo"> </a></li>
                </ul>
            </div>
            <div class="clearfix"> </div>
        </div>
    </div>
    <div class="header-two navbar navbar-default">
        <!--header-two-->
        <div class="container">
            <div class="nav navbar-nav header-two-left">
                <ul>
                    @if (Session["User"] != null && Session["User"] != "")
                    {
                        User user = (User)Session["User"];
                        <input type="text" id="UserID" value="@user.ID" hidden />
                        <li><i class="glyphicon glyphicon-user" aria-hidden="true"></i><a href="@Url.Action("Index","User")">@user.FullName</a></li>
                        <br />
                        <li><i class="glyphicon glyphicon-shopping-cart" aria-hidden="true"></i><a href="@Url.Action("CheckoutOrder","User")">Đơn hàng</a></li>
                        <br />
                        <li><i class="glyphicon glyphicon-gift" aria-hidden="true"></i><a href="@Url.Action("Index","Voucher")">Voucher của tôi</a></li>
                        <br />
                        <li><i class="glyphicon glyphicon-dashboard" aria-hidden="true"></i><a href="@Url.Action("ProductViewed","Product")">Lịch sử xem</a></li>
                    }
                </ul>
            </div>
            <div class="nav navbar-nav logo wow zoomIn animated" data-wow-delay=".7s">
                <h1><a href="/trang-chu">Toy<b>Store</b><span class="tag">Tất cả mọi thứ bé cần </span> </a></h1>
            </div>
            <div class="nav navbar-nav navbar-right header-two-right">
                <div class="header-right my-account">
                    <a href="/quay-trung-thuong"><span class="glyphicon glyphicon-gift" aria-hidden="true"></span> Săn Voucher</a>
                </div>
                <div class="header-right cart" id="DivCart">
                    @Html.Action("CartPartial", "Cart")
                </div>
                <div class="clearfix"> </div>
            </div>
            <div class="clearfix"> </div>
        </div>
    </div>
    @Html.Action("MenuPartial", "Home")
</div>
<!--//header-->