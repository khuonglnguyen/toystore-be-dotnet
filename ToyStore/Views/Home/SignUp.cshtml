@{
    ViewBag.Title = "ConfirmEmail";
    Layout = "~/Views/Layout/HomeLayout.cshtml";
}
<!--breadcrumbs-->
<div class="breadcrumbs">
    <div class="container">
        <ol class="breadcrumb breadcrumb1 animated wow slideInLeft" data-wow-delay=".5s">
            <li><a href="@Url.Action("Index","Home")"><span class="glyphicon glyphicon-home" aria-hidden="true"></span>Trang Chủ</a></li>
            <li class="active">Đăng Ký</li>
        </ol>
    </div>
</div>
<br />
<!--//breadcrumbs-->
<!--login-->
<div class="login-page">
    <div class="title-info wow fadeInUp animated" data-wow-delay=".5s">
        <h3 class="title">Đăng Ký</h3>
        <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit curabitur </p>
    </div>
    <div class="widget-shadow">
        <div class="login-top wow fadeInUp animated" data-wow-delay=".7s">
            <h4>Chào mừng bạn đến với KMD ToyStore ! <br> Bạn chưa có tài khoản? <a href="register.html">  Đăng Ký Ngay »</a> </h4>
        </div>
        <div class="login-body wow fadeInUp animated" data-wow-delay=".7s">
            @using (Html.BeginForm("SignUp", "Home", FormMethod.Post))
            {
                <input type="text" class="user" name="Username" placeholder="Tên đăng nhập" required="">
                <input type="password" name="Password" class="lock" placeholder="Mật Khẩu">
                <input type="text" class="user" name="FullName" placeholder="Họ tên" required="">
                <input type="text" class="user" name="Email" placeholder="Email của bạn" required="">
                <input type="text" class="user" name="PhoneNumber" placeholder="Số điện thoại" required="">
                <input type="text" class="user" name="Address" placeholder="Địa chỉ" required="">
                <input type="submit" name="Sign In" value="Đăng Ký">
            }
        </div>
    </div>
    <div class="login-page-bottom">
        <h5> - Hoặc -</h5>
        <div class="social-btn"><a href="#"><i>Đăng Nhập Với Facebook</i></a></div>
        <div class="social-btn sb-two"><a href="#"><i>Đăng Nhập Với Twitter</i></a></div>
    </div>
</div>
<!--//login-->
