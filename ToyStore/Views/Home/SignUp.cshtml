@model ToyStore.Models.User
@{
    ViewBag.Title = "Đăng Ký";
    Layout = "~/Views/Layout/HomeLayout.cshtml";
}
<script>
    $(document).ready(function () {
        $(function () {
            $("#phonenumber").keypress(function (e) {
                if (e.which != 8 && e.which != 0 && (e.which < 48 || e.which > 57)) {
                    return false;
                }
            });
        });
        var password = document.getElementById("Password")
            , confirm_password = document.getElementById("confirm_password");

        function validatePassword() {
            if (password.value != confirm_password.value) {
                confirm_password.setCustomValidity("Nhập lại mật khẩu chưa trùng khớp!");
            } else {
                confirm_password.setCustomValidity('');
            }
        }

        password.onchange = validatePassword;
        confirm_password.onkeyup = validatePassword;
    });
</script>
<!--breadcrumbs-->
<div class="breadcrumbs">
    <div class="container">
        <ol class="breadcrumb breadcrumb1 animated wow slideInLeft" data-wow-delay=".5s">
            <li><a href="@Url.Action("Index","Home")"><span class="glyphicon glyphicon-home" aria-hidden="true"></span>Trang Chủ</a></li>
            <li class="active">Đăng Ký</li>
        </ol>
    </div>
</div>
<br />
<!--//breadcrumbs-->
<!--login-->
<div class="login-page">
    <div class="title-info wow fadeInUp animated" data-wow-delay=".5s">
        <h3 class="title">Đăng Ký</h3>
    </div>
    <div class="widget-shadow">
        <div class="login-body wow fadeInUp animated" data-wow-delay=".7s">
            @using (Html.BeginForm("SignUp", "Home", FormMethod.Post))
            {
                if (Model != null)
                {
                    <p class="text-danger">@ViewBag.MessageUsername</p>
                    <input type="text" class="user" name="FullName" placeholder="Họ tên" value="@Model.FullName" required maxlength="30">
                    <span id='message'></span>
                    <p class="text-danger">@ViewBag.MessageEmail</p>
                    <input type="text" class="user" name="Email" placeholder="Email của bạn" value="@Model.Email" required pattern="[a-z0-9._%+-]+&#64;[a-z0-9.-]+\.[a-z]{2,}$" title="Nhập vào đúng đinh dạng mail của bạn (vd: abc@gmail.com)">
                    <input type="password" id="Password" name="Password" value="@Model.Password" class="lock" placeholder="Mật Khẩu" pattern=".{8,}" required title="Mật khẩu phải từ 8 ký tự trở lên!">
                    <input type="password" id="confirm_password" name="confirm_password" class="lock" placeholder="Nhập lại mật Khẩu" pattern=".{8,}" required title="Mật khẩu phải từ 8 ký tự trở lên!">
                    <p class="text-danger">@ViewBag.MessagePhoneNumber</p>
                    <input type="text" class="user" id="phonenumber" name="PhoneNumber" placeholder="Số điện thoại" value="@Model.PhoneNumber" pattern=".{10,12}" required title="Số điện thoại phải từ 10 đến 12 số!">
                    <input type="text" class="user" name="Address" placeholder="Địa chỉ" value="@Model.Address" required maxlength="200">
                    <input type="submit" id="btnSignIn" name="Sign In" value="Đăng Ký">
                }
                else
                {
                    <input type="text" class="user" name="FullName" placeholder="Họ tên" required maxlength="30">
                    <span id='message'></span>
                    <input type="text" class="user" name="Email" placeholder="Email của bạn" required pattern="[a-z0-9._%+-]+&#64;[a-z0-9.-]+\.[a-z]{2,}$" title="Nhập vào đúng đinh dạng mail của bạn (vd: abc@gmail.com)">
                    <input type="password" id="Password" name="Password" class="lock" placeholder="Mật Khẩu" pattern=".{8,}" required title="Mật khẩu phải từ 8 ký tự trở lên!">
                    <input type="password" id="confirm_password" name="confirm_password" class="lock" placeholder="Nhập lại mật Khẩu" pattern=".{8,}" required title="Mật khẩu phải từ 8 ký tự trở lên!">
                    <input type="text" class="user" id="phonenumber" name="PhoneNumber" placeholder="Số điện thoại" pattern=".{10,12}" required title="Số điện thoại phải từ 10 đến 12 số!">
                    <input type="text" class="user" name="Address" placeholder="Địa chỉ" required maxlength="200">
                    <input type="submit" id="btnSignIn" name="Sign In" value="Đăng Ký">
                }
            }
        </div>
    </div>
</div>
<!--//login-->
