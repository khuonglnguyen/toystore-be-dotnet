@{
    ViewBag.Title = "Đăng Ký";
    Layout = "~/Views/Layout/HomeLayout.cshtml";
}
<script>
    $(document).ready(function () {
        $('#Password, #confirm_password').on('keyup', function () {
            if ($('#Password').val() == $('#confirm_password').val()) {
                $('#message').html('Đúng').css('color', 'green');
            } else
                $('#message').html('Không đúng').css('color', 'red');
        });
        $('#btnSignIn').off('click').on('click', function () {
            var check = $('#message').html();
        });
    });
</script>
<!--breadcrumbs-->
<div class="breadcrumbs">
    <div class="container">
        <ol class="breadcrumb breadcrumb1 animated wow slideInLeft" data-wow-delay=".5s">
            <li><a href="@Url.Action("Index","Home")"><span class="glyphicon glyphicon-home" aria-hidden="true"></span>Trang Chủ</a></li>
            <li class="active">Đăng Ký</li>
        </ol>
    </div>
</div>
<br />
<!--//breadcrumbs-->
<!--login-->
<div class="login-page">
    <div class="title-info wow fadeInUp animated" data-wow-delay=".5s">
        <h3 class="title">Đăng Ký</h3>
        <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit curabitur </p>
    </div>
    <div class="widget-shadow">
        <div class="login-top wow fadeInUp animated" data-wow-delay=".7s">
            <h4>Chào mừng bạn đến với KMD ToyStore ! <br> Bạn chưa có tài khoản? <a href="register.html">  Đăng Ký Ngay »</a> </h4>
        </div>
        <div class="login-body wow fadeInUp animated" data-wow-delay=".7s">
            @using (Html.BeginForm("SignUp", "Home", FormMethod.Post))
            {
                <input type="text" class="user" name="Username" placeholder="Tên đăng nhập" required="" oninvalid="this.setCustomValidity('Vui lòng nhập vào tên đăng nhập')" oninput="setCustomValidity('')">
                <input type="password" id="Password" name="Password" class="lock" placeholder="Mật Khẩu" required="" oninvalid="this.setCustomValidity('Vui lòng nhập vào mật khẩu')" oninput="setCustomValidity('')">
                <input type="password" id="confirm_password" name="confirm_password" class="lock" placeholder="Nhập lại mật Khẩu" required="" oninvalid="this.setCustomValidity('Vui lòng nhập lại mật khẩu')" oninput="setCustomValidity('')">
                <span id='message'></span>
                <input type="text" class="user" name="FullName" placeholder="Họ tên" required="" oninvalid="this.setCustomValidity('Vui lòng nhập vào họ tên')" oninput="setCustomValidity('')">
                <input type="text" class="user" name="Email" placeholder="Email của bạn" required="" oninvalid="this.setCustomValidity('Vui lòng nhập vào Email')" oninput="setCustomValidity('')">
                <input type="text" class="user" name="PhoneNumber" placeholder="Số điện thoại" required="" oninvalid="this.setCustomValidity('Vui lòng nhập vào số điện thoại')" oninput="setCustomValidity('')">
                <input type="text" class="user" name="Address" placeholder="Địa chỉ" required="" oninvalid="this.setCustomValidity('Vui lòng nhập vào địa chỉ')" oninput="setCustomValidity('')">
                <input type="submit" id="btnSignIn" name="Sign In" value="Đăng Ký">
            }
        </div>
    </div>
    <div class="login-page-bottom">
        <h5> - Hoặc -</h5>
        <div class="social-btn"><a href="#"><i>Đăng Nhập Với Facebook</i></a></div>
        <div class="social-btn sb-two"><a href="#"><i>Đăng Nhập Với Twitter</i></a></div>
    </div>
</div>
<!--//login-->
