@model IEnumerable<ToyStore.Models.ImportCouponDetail>
@{ ViewBag.Title = "Chi Tiết Phiếu Nhập";
                Layout = "~/Views/Layout/AdminLayout.cshtml"; }
<ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="@Url.Action("Index")">Trang chủ</a> <i class="fa fa-angle-right"></i></li>
    <li class="breadcrumb-item"><a href="@Url.Action("List")">Chi tiết phiếu nhập</a> <i class="fa fa-angle-right"></i></li>
</ol>
<div class="agile-grids">
    <div class="agile-tables">
        <div class="w3l-table-info">
            <h2>Danh sách phiếu nhập: <label>@ViewBag.ID</label></h2>
            <table id="table">
                <thead>
                    <tr>
                        <th>
                            Mã Chi Tiết PN
                        </th>
                        <th>
                            Tên Sản Phẩm
                        </th>
                        <th>
                            Hình Ảnh
                        </th>
                        <th>
                            Đơn Giá Nhập
                        </th>
                        <th>
                            Số Lượng
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td style="color:brown">
                                <b>@Html.DisplayFor(modelItem => item.ID)</b>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Product.Name)
                            </td>
                            <td>
                                <img src="@Url.Content("~/Content/images/" + item.Product.Image1)" width="100" height="100" />
                            </td>
                            <td>
                                <span>@item.Price.ToString("#,##")</span>
                            </td>
                            <td>
                                <span>@item.Quantity</span>
                            </td>
                        </tr>}
                </tbody>
            </table>
        </div>
    </div>
</div>

