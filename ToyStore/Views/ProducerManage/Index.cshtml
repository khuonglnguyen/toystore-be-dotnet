<ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="@Url.Action("Index")">Trang chủ</a> <i class="fa fa-angle-right"></i></li>
    <li class="breadcrumb-item"><a href="@Url.Action("List")">Nhà sản xuất</a> <i class="fa fa-angle-right"></i></li>
</ol>

<div class="agile-grids">
    <div class="agile-tables">
        <div class="w3l-table-info">
            <ul class="bt-list">
                <li><a href="#" class="hvr-icon-float-away col-24" style="background-color:green" id="btnAddNew">Thêm mới</a></li>
            </ul>
            <hr />
            <div class="w3-search-box">
                <form action="~/ProductCategoryManage/List" method="post">
                    <input type="text" placeholder="Tìm kiếm..." name="keyword" id="keyword">
                    <input type="submit" value="">
                </form>
            </div><!--//end-search-box-->
            <div class="clearfix"> </div>
            <hr />
            <h2>Danh sách nhà sản xuất</h2>
            <table id="table">
                <thead>
                    <tr>
                        <th>
                            Tên nhà sản xuất
                        </th>
                        <th>
                            Logo
                        </th>
                        <th>
                            Thông tin
                        </th>
                        <th>
                            Ngày cập nhật cuối
                        </th>
                        <th>
                            Trạng thái
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td style="color:brown">
                                <b>@Html.DisplayFor(modelItem => item.Name)</b>
                            </td>
                            <td>
                                <img src="@Url.Content("~/Content/images/" + item.Logo)" width="100" height="100" />
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Imfomation)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LastUpdatedDate)
                            </td>
                            <td>
                                @if (item.IsActive == true)
                                {
                                    <label class="switch block">
                                        <input type="checkbox" checked class="ckb" value="@item.ID">
                                        <span class="slider round"></span>
                                    </label>
                                }
                                else
                                {
                                    <label class="switch active">
                                        <input type="checkbox" class="ckb" value="@item.ID">
                                        <span class="slider round"></span>
                                    </label>
                                }
                            </td>
                            <td>
                                <button class="btn btn-primary btnEdit" value="@item.ID">Sửa</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <br />
            <div id='Paging' style="text-align: center">
                @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="modalAdd" role="dialog">
    <div class="modal-dialog">

        <!--Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Thêm mới</h4>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("Create", "ProducerManage", FormMethod.Post, new { @enctype = "multipart/form-data" }))
                {
                    <input type="text" name="ID" id="IDAdd" hidden />
                    <input type="text" name="page" value="@ViewBag.Page" hidden="hidden" />
                    <div class="form-group">
                        <label for="Name">Tên nhà sản xuất:</label>
                        <input type="text" class="form-control" name="Name" id="NameAdd">
                    </div>
                    <div class="form-group">
                        <label>Logo:</label>
                        <input type="text" class="form-control" name="Logo" id="TextLogoAdd" readonly>
                        <input type="file" name="ImageUpload" id="Image" />
                    </div>
                    <div class="form-group">
                        <label>Thông tin:</label>
                        <input type="text" class="form-control" name="Description" id="DescriptionAdd">
                    </div>
                    <div class="form-group">
                        <label>Kích hoạt:</label>
                        <input class="form-control" data-val="true" id="IsActiveAdd" name="IsActive" type="checkbox" value="true">
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary" id="btnSave">Lưu</button>
                        <button type="button" class="btn btn-default" data-dismiss="modal">Hủy</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
