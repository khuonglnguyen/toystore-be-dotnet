@model PagedList.IPagedList<ToyStore.Models.Producer>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Quản lý nhà sản xuất";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
}
<link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
<script src="//code.jquery.com/jquery-1.10.2.js"></script>
<script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
<script src="~/Scripts/bootbox.js"></script>

<script>
    $(document).ready(function () {
        $(".ckb").change(function () {
            var id = $(this).prop("value");
            if ($(this).is(':checked')) {
                $.ajax({
                    url: '/ProducerManage/Active',
                    data: {
                        id: id
                    }
                });
            }
            else {
                $.ajax({
                    url: '/ProducerManage/Block',
                    data: {
                        id: id
                    }
                });
            }
        });
        $('#btnAddNew').off('click').on('click', function () {
            $('#modalAdd').modal('show');
        });
        $('.btnEdit').off('click').on('click', function () {
            var id = $(this).val();
            $('#modalUpdate').modal('show');
            $.ajax({
                url: '/ProducerManage/Edit',
                data: {
                    id: id
                },
                type: 'GET',
                dataType: 'json',
                success: function (response) {
                    if (response.status == true) {
                        $('#IDEdit').val(response.ID);
                        $('#NameEdit').val(response.Name);
                        $('#ImformationIDEdit').val(response.Imformation);
                        $('#TextLogoEdit').val(response.Logo);
                        $('#IsActiveEdit').prop("checked", response.IsActive);
                    }
                    else {
                        bootbox.alert(response.message);
                    }
                },
                error: function (err) {
                    console.log(err);
                }
            });
        });
        $("#keyword").autocomplete({
            source: function (request, response) {
                $.ajax({
                    url: "/ProductCategoryManage/ListName",
                    type: "POST",
                    dataType: "json",
                    data: { Prefix: request.term },
                    success: function (data) {
                        response($.map(data, function (item) {
                            return { label: item, value: item };
                        }))

                    }
                })
            },
            messages: {
                noResults: "", results: ""
            }
        });
        function onchange(e) {
            var country = document.getElementById('search').ej2_instances[0];
            country.filterType = e.itemData.value;
        }
        $('#btnDeleteMulti').hide();
        $('#checkAll').click(function () {
            if ($(this).is(":checked")) {
                $(".cbProductCategory").prop("checked", true)
            }
            else {
                $(".cbProductCategory").prop("checked", false)
            }
            $('#btnDeleteMulti').toggle();
        });
    });
</script>
