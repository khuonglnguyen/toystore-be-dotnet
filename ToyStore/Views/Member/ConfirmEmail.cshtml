@{
    ViewBag.Title = "ConfirmEmail";
    Layout = "~/Views/Layout/HomeLayout.cshtml";
}

<h2>Xác minh Email của bạn</h2>
@ViewBag.Message
<div class="grid-form1">
    @using (Html.BeginForm("ConfirmEmail", "Member", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <input type="text" name="ID" value="@ViewBag.ID" hidden="hidden" />
        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.Label("Mã xác minh", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-8">
                    @Html.Editor("capcha", new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Xác minh" class="btn btn-primary" />
                </div>
            </div>
        </div>
    }
</div>