@model IEnumerable<ToyStore.Models.ProductCategory>

@{
    ViewBag.Title = "Danh mục";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
}

<div class="agile-grids">
    <div class="agile-tables">
        <div class="w3l-table-info">
            @Html.ActionLink("Thêm mới", "Create")
            <h2>Danh sách danh mục</h2>
            <table id="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Description)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Image)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.IsActive)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.LastUpdatedDate)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Image)
                            </td>
                            <td>
                                @if (item.IsActive == true)
                                {
                                    <input type="checkbox" checked="checked" />
                                }
                                else
                                {
                                    <input type="checkbox" />
                                }
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LastUpdatedDate)
                            </td>
                            <td>
                                @Html.ActionLink("Chỉnh sửa", "EditProductCategory", new { id = item.ID }, new { @class = "btn btn-primary" })
                                @Html.ActionLink("Chi tiết", "DetailsProductCategory", new { id = item.ID }, new { @class = "btn btn-info" })
                                @Html.ActionLink("Xóa", "DeleteProductCategory", new { id = item.ID }, new { @class = "btn btn-danger" })
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>
</div>

<!-- script-for sticky-nav -->
<script>
    $(document).ready(function () {
        var navoffeset = $(".header-main").offset().top;
        $(window).scroll(function () {
            var scrollpos = $(window).scrollTop();
            if (scrollpos >= navoffeset) {
                $(".header-main").addClass("fixed");
            } else {
                $(".header-main").removeClass("fixed");
            }
        });

    });
</script>
