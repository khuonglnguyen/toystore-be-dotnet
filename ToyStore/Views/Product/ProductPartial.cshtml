@model ToyStore.Models.Product

<div class="new-top">
    <a href="@Url.Action("Details","Product",new { ID=Model.ID})"><img src="@Url.Content("~/Content/images/"+Model.Image1)" style="height:250px;width:300px" class="img-responsive" alt="item" /></a>
    <div class="new-text">
        <ul>
            <li><a href="@Url.Action("Details","Product",new { ID=Model.ID})">Xem Chi Tiết </a></li>
            <li class="Add">@Ajax.ActionLink("Thêm Vào Giỏ", "AddItemCart", "Cart", new { ID = Model.ID, @class = "item_add" }, new AjaxOptions { HttpMethod = "GET", UpdateTargetId = "DivCart", InsertionMode = InsertionMode.Replace }, null)</li>
        </ul>
    </div>
</div>
<div class="new-bottom">
    <h5><a class="name" href="@Url.Action("Details","Product",new { ID=Model.ID})" style="width: 200px;display: inline-block;white-space: nowrap;text-overflow: ellipsis;overflow: hidden;">@Model.Name </a></h5>
    <div class="rating">
        <span class="on">☆</span>
        <span class="on">☆</span>
        <span class="on">☆</span>
        <span class="on">☆</span>
        <span>☆</span>
    </div>
    <div class="ofr">
        <p class="pric1"><del>@Model.Price.ToString("#,##")₫</del></p><br />
        @if (Model.Discount > 0)
        {
            <p><span class="item_price">@Model.PromotionPrice.ToString("#,##")₫</span></p>
        }
        else
        {
            <p class="pric1"><del>0</del></p><br />
        }
    </div>
</div>
