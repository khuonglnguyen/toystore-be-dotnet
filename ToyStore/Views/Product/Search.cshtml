            @Ajax.ActionLink("Tìm kiếm", "Search1", "Product", new { keyword = "Chiến binh" }, new AjaxOptions { HttpMethod = "GET", UpdateTargetId = "ProductContainer", InsertionMode = InsertionMode.Replace }, null)
